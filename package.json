{
  "name": "@marcus/roc",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    "./react/*": "./dist/react/*",
    "./svelte": "./dist/svelte/index.js",
    "./svelte/outline": "./dist/svelte/outline/index.js",
    "./svelte/solid": "./dist/svelte/solid/index.js",
    "./svelte/duotone": "./dist/svelte/duotone/index.js",
    "./svelte/sharp": "./dist/svelte/sharp/index.js",
    "./svelte/*": "./dist/svelte/*",
    "./svg/*": "./dist/svg/*",
    "./sprite": "./dist/sprite.svg",
    "./metadata": "./dist/metadata.json"
  },
  "scripts": {
    "build": "node build.mjs",
    "build:svg": "node build.mjs --svg",
    "build:react": "node build.mjs --react",
    "build:svelte": "node build.mjs --svelte",
    "build:sprite": "node build.mjs --sprite",
    "build:demo": "node build.mjs --demo",
    "prepare": "npm run build",
    "dev": "node build.mjs --watch",
    "preview": "open demo/index.html",
    "deploy": "npm run build && scp demo/index.html root@haplab.com:/var/www/roc/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcus/roc.git"
  },
  "peerDependencies": {
    "react": ">=18",
    "svelte": ">=5"
  },
  "devDependencies": {
    "svgo": "^3.0.0"
  }
}
